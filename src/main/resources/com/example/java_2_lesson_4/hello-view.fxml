    <Button maxWidth="Infinity" onAction="#sendMsg" text="Enter" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="10" GridPane.vgrow="ALWAYS" />
    <TextField fx:id="textField" onAction="#sendMsg" promptText="input text" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
    <TextArea fx:id="textArea" editable="true" prefHeight="150" prefWidth="600" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
</GridPane>


